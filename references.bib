@article{Lang2025HydrogenSinglecarbonCompounds,
  title = {Hydrogen, Single-Carbon Compounds, and Thermal Regime in the Oceanic Ultramafic-Dominated Lithosphere: Insights from a Deep Borehole on the {{Atlantis Massif}}},
  shorttitle = {Hydrogen, Single-Carbon Compounds, and Thermal Regime in the Oceanic Ultramafic-Dominated Lithosphere},
  author = {Lang, Susan Q. and Wheat, C. Geoffrey and Dickerson, Kristin L. and Reagan, Mark K. and Savov, Ivan P. and Robare, Jordyn A. and Brazelton, William J. and Suhonen, Johanna and Cavazos, Oscar and McCaig, Andrew and Blum, Peter and Abe, Natsue and Coltat, R{\'e}mi and Deans, Jeremy R. and Godard, Marguerite and John, Barbara E. and Klein, Frieder and Kuehn, Rebecca and Lin, Kuan-Yu and Lissenberg, C. Johan and Liu, Haiyang and Lopes, Ethan L. and Nozaka, Toshio and Osborne, William and Parsons, Andrew J. and Pathak, Vamdev and Rodgers, Jessica and Seewald, Jeffrey S. and Sims, Kenneth W. and Southam, Gordon and Sylva, Sean and Wang, Fengping},

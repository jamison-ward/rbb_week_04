@article{Weiss2016PhysiologyHabitatLast,
  title = {The Physiology and Habitat of the Last Universal Common Ancestor},
  author = {Weiss, Madeline C. and Sousa, Filipa L. and Mrnjavac, Natalia and Neukirchen, Sinje and Roettger, Mayo and {Nelson-Sathi}, Shijulal and Martin, William F.},
